<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.main.feed.FeedFragment"
    android:background="@color/colorPrimaryLight">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fragment_create_post__toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/fragment_feed__recycler"
        android:paddingHorizontal="10dp">

        <LinearLayout
            android:id="@+id/fragment_create_post__title_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/fragment_create_post__buttons_layout"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            android:gravity="center">

<!--            <de.hdodenhof.circleimageview.CircleImageView-->
<!--                android:id="@+id/fragment_feed__avatar"-->
<!--                android:layout_width="@dimen/_26sdp"-->
<!--                android:layout_height="@dimen/_26sdp"-->
<!--                android:src="@drawable/im_avatar"-->
<!--                app:layout_constraintBottom_toBottomOf="parent"-->
<!--                app:layout_constraintStart_toStartOf="parent"-->
<!--                app:layout_constraintTop_toTopOf="parent"-->
<!--                app:layout_constraintEnd_toStartOf="@id/item_post__header_info"-->
<!--                app:layout_constraintHorizontal_chainStyle="packed"-->
<!--                app:layout_constraintHorizontal_bias="0" />-->

            <TextView
                android:id="@+id/fragment_create_post__title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Главная"
                android:textSize="21sp"
                android:fontFamily="@font/rubik_medium" />
        </LinearLayout>



        <LinearLayout
            android:id="@+id/fragment_create_post__buttons_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/fragment_create_post__title_layout"
            android:gravity="center">

            <ImageButton
                android:id="@+id/fragment_create_post__cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_create"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="10dp"
                android:layout_marginEnd="5dp"/>

            <ImageButton
                style="@style/Button"
                android:id="@+id/fragment_create_post__confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_search"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="10dp"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fragment_feed__recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingTop="@dimen/_10sdp"
        tools:listitem="@layout/item_post"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_create_post__toolbar"/>

</androidx.constraintlayout.widget.ConstraintLayout>